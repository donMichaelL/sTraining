<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_light"
    tools:context="com.example.michalis.straining.DetailActivity"
    android:weightSum="1.0">

    <TableRow>
        <TextView
            android:id="@+id/training_number"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_weight="1.0"
            android:layout_span="2"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="15dp">
        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/txt_desciption"
            android:layout_weight="1.0"
            android:layout_span="2"/>
    </TableRow>


    <TableRow
        android:layout_marginTop="10dp">
        <TextView
            android:text="Total KM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/total_km"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="8dp">
        <TextView
            android:text="Total Time(Min)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/total_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="8dp">
        <TextView
            android:text="T1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/txt_t1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:text="T2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/txt_t2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="T3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/txt_t3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:text="T1_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/txt_t1_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="T2_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/txt_t2_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:text="TA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/txt_ta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="TT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:id="@+id/txt_tt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.25"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"/>
    </TableRow>

    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:text="GX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.15"/>
        <TextView
            android:id="@+id/txt_gx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.15"/>
        <TextView
            android:text="GP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.15"/>
        <TextView
            android:id="@+id/txt_gp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.15"/>
        <TextView
            android:text="Gd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.15"/>
        <TextView
            android:id="@+id/txt_gd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.15"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="8dp">
        <TextView
            android:text="#Trainings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/txt_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="0.5"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="8dp">
        <TextView
            android:text="Texniki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/txt_texniki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="0.5"/>
    </TableRow>

    <TableRow>
        <TextView
            android:text="Drastiriotita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/txt_drastiriotita"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="0.5"/>
    </TableRow>

</TableLayout>
